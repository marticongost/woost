
@init
def _translate_alignment(instance):
    valign = instance.get_translated_value("vertical_alignment")
    halign = instance.get_translated_value("horizontal_alignment")
    if valign == halign:
        return valign.lower()
    else:
        return u"%s, %s" % (valign, halign)
@end

