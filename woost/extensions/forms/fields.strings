
@init
def get_field(member):
    from woost.extensions.forms.fields import Field
    field_id = member.original_member.field_id
    return field_id and Field.get_instance(field_id) or None

def field_property(member, *properties):

    field = get_field(member)

    if field:
        for prop in properties:
            value = field.get(prop)
            if value:
                return value

    return None
