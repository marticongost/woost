@init
def describe_selection_error_limit(error, min_label, max_label, singular, plural):

    if instance.action.min and instance.selection_size < instance.action.min:
        label = min_label
        limit = error.action.min
    else:
        label = max_label
        limit = error.action.max

    return label + " " + plural2(limit, singular, plural)
@end

